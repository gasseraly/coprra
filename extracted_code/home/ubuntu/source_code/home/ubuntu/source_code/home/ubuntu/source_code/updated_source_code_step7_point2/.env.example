# =====================================================
# CopRRA Environment Configuration
# =====================================================

# Application Settings
APP_NAME=CopRRA
APP_ENV=production
APP_DEBUG=false
APP_URL=https://coprra.com
APP_TIMEZONE=Asia/Riyadh
APP_LOCALE=ar

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=coprra_ai
DB_USERNAME=your_username
DB_PASSWORD=your_password
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# AI Configuration
AI_PROVIDER=openai
AI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-4
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7
AI_ENDPOINT=https://api.openai.com/v1

# Alternative AI Providers
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random
ENCRYPTION_KEY=your_encryption_key_here_32_characters
SESSION_SECRET=your_session_secret_here
CSRF_TOKEN_SECRET=your_csrf_token_secret_here

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# Mail Configuration
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=contact@coprra.com
MAIL_PASSWORD=your_smtp_password_here
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=contact@coprra.com
MAIL_FROM_NAME="CopRRA Team"

# Alternative Mail Providers
SENDGRID_API_KEY=your_sendgrid_api_key_here
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_mailgun_domain_here

# Cache Configuration
CACHE_DRIVER=redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=your_redis_password_here
REDIS_PORT=6379
REDIS_DB=0

# Queue Configuration
QUEUE_CONNECTION=database
QUEUE_DRIVER=database
QUEUE_TABLE=jobs
QUEUE_FAILED_TABLE=failed_jobs

# File Storage
FILESYSTEM_DISK=local
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your_s3_bucket_name_here

# Search Configuration
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_elasticsearch_password_here

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
GOOGLE_TAG_MANAGER_ID=GTM_CONTAINER_ID
FACEBOOK_PIXEL_ID=your_facebook_pixel_id_here

# Social Media API Keys
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
INSTAGRAM_APP_ID=your_instagram_app_id_here
INSTAGRAM_APP_SECRET=your_instagram_app_secret_here

# Payment Gateway Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox

# Affiliate Network Configuration
AMAZON_AFFILIATE_TAG=your_amazon_affiliate_tag_here
EBAY_AFFILIATE_ID=your_ebay_affiliate_id_here
ALIEXPRESS_AFFILIATE_ID=your_aliexpress_affiliate_id_here

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_AI_CHATBOT=50
RATE_LIMIT_AI_SEARCH=200

# AI Chatbot Configuration
CHATBOT_MAX_MESSAGES=100
CHATBOT_SESSION_TIMEOUT=3600
CHATBOT_DEFAULT_LANGUAGE=ar
CHATBOT_SUPPORTED_LANGUAGES=ar,en

# Search Configuration
SEARCH_MAX_RESULTS=100
SEARCH_SUGGESTION_LIMIT=8
SEARCH_TRENDING_LIMIT=10
SEARCH_HISTORY_LIMIT=20

# Content Generation Configuration
CONTENT_GENERATION_MAX_LENGTH=1000
CONTENT_GENERATION_QUALITY_THRESHOLD=0.8
CONTENT_GENERATION_APPROVAL_REQUIRED=true

# Image Generation Configuration
IMAGE_GENERATION_MAX_SIZE=1024
IMAGE_GENERATION_QUALITY_THRESHOLD=0.7
IMAGE_GENERATION_STORAGE_PATH=/ai-generated

# SEO Configuration
SEO_META_DESCRIPTION_LENGTH=160
SEO_TITLE_MAX_LENGTH=60
SEO_KEYWORDS_MAX_COUNT=10
SEO_AUTO_OPTIMIZATION=true

# Performance Configuration
CACHE_TTL=3600
ASSET_VERSIONING=true
MINIFY_HTML=true
MINIFY_CSS=true
MINIFY_JS=true
COMPRESS_IMAGES=true

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info
LOG_CHANNEL=stack
LOG_DAYS=30

# Development Configuration (set to false in production)
DEVELOPMENT_MODE=false
DEBUG_BAR_ENABLED=false
SHOW_ERRORS=false
LOG_QUERIES=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE=local

